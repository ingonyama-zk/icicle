package ecntt

import (
	"os"
	"testing"

	"github.com/ingonyama-zk/icicle/wrappers/golang/core"
	{{.Curve}}Fields "github.com/ingonyama-zk/icicle/wrappers/golang/temp_golang_structure/fields/{{.Curve}}"
	{{.Curve}} "github.com/ingonyama-zk/icicle/wrappers/golang/temp_golang_structure/curves/{{.Curve}}"
	"github.com/stretchr/testify/assert"
