		cfg.StreamHandle = stream

		e = {{if eq .CurvePrefix "G2"}}g2{{else}}msm{{end}}.{{.CurvePrefix}}Msm(scalars, points, &cfg, outMain)
		suite.Equal(e, runtime.Success, "Msm failed")
